<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foi"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="3:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_marginPercent="5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.85"
        app:srcCompat="@drawable/long_papirus"
        tools:ignore="PxUsage" />

    <!-- Barres de vie entre les deux images -->
    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="275dp"
        android:layout_height="20dp"
        android:progress="50"
        android:progressTint="@android:color/holo_green_light"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintTop_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/imageView4"
        app:layout_constraintWidth_percent="0.85" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="275dp"
        android:layout_height="20dp"
        android:progress="70"
        android:progressTint="@android:color/holo_orange_light"
        app:layout_constraintEnd_toEndOf="@+id/progressBar1"
        app:layout_constraintTop_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/progressBar1"
        app:layout_constraintWidth_percent="0.85" />

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="275dp"
        android:layout_height="20dp"
        android:progress="30"
        android:progressTint="@android:color/holo_red_light"
        app:layout_constraintEnd_toEndOf="@+id/progressBar2"
        app:layout_constraintTop_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/progressBar2"
        app:layout_constraintWidth_percent="0.85" />

    <ProgressBar
        android:id="@+id/progressBar4"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="275dp"
        android:layout_height="20dp"
        android:progress="90"
        android:progressTint="@android:color/holo_blue_light"
        app:layout_constraintEnd_toEndOf="@+id/progressBar3"
        app:layout_constraintTop_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/progressBar3"
        app:layout_constraintWidth_percent="0.85" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_margin="5%"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="5%"
        app:layout_constraintTop_toBottomOf="@+id/progressBar4"
        app:layout_constraintWidth_percent="0.9"
        app:srcCompat="@drawable/papyrus" />

    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#157C21"
        android:text="Accepter"
        app:layout_constraintEnd_toStartOf="@id/button6"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="3%"
        app:layout_constraintTop_toBottomOf="@id/imageView9"
        app:layout_constraintWidth_percent="0.35" />

    <Button
        android:id="@+id/button6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#BB0000"
        android:text="Refuser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintStart_toEndOf="@id/button3"
        app:layout_constraintTop_margin="3%"
        app:layout_constraintTop_toBottomOf="@id/imageView9"
        app:layout_constraintWidth_percent="0.35" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintDimensionRatio="3:1"
        app:layout_constraintTop_toBottomOf="@id/button3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="5%"
        app:srcCompat="@drawable/long_papirus" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="263dp"
        android:layout_height="32dp"
        android:fontFamily="cursive"
        android:text="<J> <N> <M> <A>, Jour <NJ>"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alex_brush"
        android:text="<Prenom> <numéro> <dynastie>"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="266dp"
        android:layout_height="202dp"
        android:fontFamily="cursive"
        android:text="Requette"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/progressBar4"
        tools:text="<Texte de la requette>" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popularité"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Richesse"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Armée"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

</androidx.constraintlayout.widget.ConstraintLayout>
